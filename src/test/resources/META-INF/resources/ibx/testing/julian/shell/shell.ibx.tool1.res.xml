<?xml version="1.0" encoding="UTF-8"?>
<ibx-res-bundle name="tool1.res.xml" loadContext="bundle">
	<strings>
		<string-bundle>
			<![CDATA[
			{
				"language":"ibx_default",
				"strings":
				{
				}
			}
		]]>
		</string-bundle>
	</strings>

	<styles>
		<style-sheet class="tool-styles">
		<![CDATA[
			body, .tool-container
			{
				margin:0px;
				position:absolute;
				width:100%;
				height:100%;
				box-sizing:border-box;
			}
			.tool-menubar
			{
				flex:0 0 auto;
				border-bottom:1px solid #ccc;
			}
			.tool-toolbar
			{
				flex:0 0 auto;
				padding:3px;
				border-bottom:1px solid #ccc;
			}
			.shape-container
			{
				flex: 1 1 auto;
				width:100%;
				height:100%;
				box-sizing:border-box;
			}
			.tool-shape
			{
				outline:none;
				flex:0 0 auto;
				width:50px;
				height:50px;
				border:2px solid green;
				background-color:white;
				margin:5px;
			}
			.tool-shape.ibx-sm-selected
			{
				background-color:lightgreen;
			}
		]]>
		</style-sheet>
		<style-sheet class="shared-styles">
		<![CDATA[
			.cmd-palette
			{
				width:100px;
				border:1px solid black;
				border-radius:0px
			}
			.cmd-palette-header
			{
				padding:3px;
				margin-bottom:3px;
				background-color:#ccc;
			}
			.pal-btn
			{
				flex:1 0 auto;
				width:24px;
				height:24px;
				margin:2px;
				padding:5px;
				font-size:1.5em;
				border:1px solid #ccc;
				box-model:border-box;
			}
		]]>
		</style-sheet>
	</styles>

	<markup>
		<markup-block>
			<div class="tool-container" data-ibx-type="ibxVBox" data-ibxp-align="stretch">
				<div class="tool-menubar" data-ibx-type="ibxMenuBar">
					<div data-ibx-type="ibxMenuButton">Edit
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdNewShape" data-ibxp-label-options.glyph-classes="fas fa-square">Add Square</div>
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdDelShape" data-ibxp-label-options.glyph-classes="fas fa-trash">Delete Squares</div>
						<div data-ibx-type="ibxMenuSeparator"></div>
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdShowPalette" data-ibxp-label-options.glyph-classes="fas fa-palette">Comamand Palette</div>
					</div>
					<div class="tool-help-menu" data-ibx-type="ibxMenuButton">Help
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdToolAbout">About Squares</div>
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdToolHelp">Squares Help...</div>
					</div>
				</div>

				<div class="tool-toolbar" data-ibx-type="ibxHBox" data-ibxp-align="center">
					<div tabindex="0" title="New Shape" class="tbar-btn tbar-btn-new" data-ibx-type="ibxButton" data-ibxp-command="cmdNewShape" data-ibxp-glyph-classes="fas fa-plus-square"></div>
					<div tabindex="0" title="Delete Shape" class="tbar-btn tbar-btn-delete" data-ibx-type="ibxButton" data-ibxp-command="cmdDelShape" data-ibxp-glyph-classes="fas fa-trash"></div>
					<div class="tbar-sep"></div>
					<div tabindex="0" title="Toggle Command Palette" class="tbar-btn tbar-btn-palette" data-ibx-type="ibxButton" data-ibxp-command="cmdShowPalette" data-ibxp-glyph-classes="fas fa-palette"></div>
				</div>

				<div class="shape-container" data-ibx-type="ibxHBox" data-ibxp-sel-type="multi" data-ibxp-wrap="true" data-ibxp-rubber-band="true" data-ibxp-rubber-band-partial-select="true">
				</div>

				<!-- create after actual ui markup so that the commands initial states will be correctly synched to the UI -->
				<div class="tool-cmds">
					<div class="cmd-about" data-ibx-type="ibxCommand" data-ibxp-id="cmdToolAbout"></div>
					<div class="cmd-help" data-ibx-type="ibxCommand" data-ibxp-id="cmdToolHelp"></div>
					<div class="cmd-new-shape" data-ibx-type="ibxCommand" data-ibxp-id="cmdNewShape"></div>
					<div class="cmd-del-shape" data-ibx-type="ibxCommand" data-ibxp-id="cmdDelShape" data-ibxp-disabled="true"></div>
					<div class="cmd-show-palette" data-ibx-type="ibxCommand" data-ibxp-id="cmdShowPalette"></div>
				</div>

				<div class="cmd-palette" data-ibx-type="ibxPopup" data-ibxp-destroy-on-close="false" data-ibxp-auto-close="false">
					<div data-ibx-type="ibxVBox" data-ibxp-align="stretch">
						<div class="cmd-palette-header" data-ibx-type="ibxLabel">Commands</div>
						<div data-ibx-type="ibxHBox" data-ibxp-align="stretch" data-ibxp-wrap="true">
							<div class="pal-btn" data-ibx-type="ibxButtonSimple" data-ibxp-glyph-classes="fas fa-anchor"></div>
							<div class="pal-btn" data-ibx-type="ibxButtonSimple" data-ibxp-glyph-classes="fas fa-anchor"></div>
							<div class="pal-btn" data-ibx-type="ibxButtonSimple" data-ibxp-glyph-classes="fas fa-anchor"></div>
							<div class="pal-btn" data-ibx-type="ibxButtonSimple" data-ibxp-glyph-classes="fas fa-anchor"></div>
						</div>
					</div>
				</div>
			</div>
		</markup-block>
	</markup>

	<scripts>
		<script-block>
		<![CDATA[
			//# sourceURL=shell.ibx.tool1.res.xml
		]]>
		</script-block>
	</scripts>
</ibx-res-bundle>