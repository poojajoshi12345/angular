<?xml version="1.0" encoding="UTF-8"?>
<ibx-res-bundle name="tool1.res.xml" loadContext="bundle">
	<strings>
		<string-bundle>
			<![CDATA[
			{
				"language":"ibx_default",
				"strings":
				{
				}
			}
		]]>
		</string-bundle>
	</strings>

	<styles>
		<style-sheet>
		<![CDATA[
		]]>
		</style-sheet>
	</styles>

	<markup>
		<markup-block>
			<div class="tool-container" data-ibx-type="ibxVBox" data-ibxp-align="stretch">
				<div class="tool-menubar" data-ibx-type="ibxMenuBar">
					<div data-ibx-type="ibxMenuButton">Edit
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdNewShape" data-ibxp-label-options.glyph-classes="fa fa-square">Add Square</div>
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdDelShape" data-ibxp-label-options.glyph-classes="fa fa-trash">Delete Squares</div>
					</div>
					<div class="tool-help-menu" data-ibx-type="ibxMenuButton">Help
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdToolAbout">About Squares</div>
						<div data-ibx-type="ibxMenuItem" data-ibxp-command="cmdToolHelp">Squares Help...</div>
					</div>
				</div>

				<div class="tool-toolbar" data-ibx-type="ibxHBox" data-ibxp-align="center">
					<div tabindex="0" class="tbar-btn tbar-btn-new" data-ibx-type="ibxButton" data-ibxp-command="cmdNewShape" data-ibxp-glyph-classes="fa fa-square">Add Square</div>
					<div tabindex="0" class="tbar-btn tbar-btn-delete" data-ibx-type="ibxButton" data-ibxp-command="cmdDelShape" data-ibxp-glyph-classes="fa fa-trash">Delete Squares</div>
				</div>

				<div class="shape-container" data-ibx-type="ibxHBox" data-ibxp-sel-type="multi" data-ibxp-wrap="true" data-ibxp-rubber-band="true" data-ibxp-rubber-band-partial-select="true">
				</div>

				<!-- create after actual ui markup so that the commands initial states will be correctly synched to the UI -->
				<div class="tool-cmds">
					<div class="cmd-about" data-ibx-type="ibxCommand" data-ibxp-id="cmdToolAbout"></div>
					<div class="cmd-help" data-ibx-type="ibxCommand" data-ibxp-id="cmdToolHelp"></div>
					<div class="cmd-new-shape" data-ibx-type="ibxCommand" data-ibxp-id="cmdNewShape"></div>
					<div class="cmd-del-shape" data-ibx-type="ibxCommand" data-ibxp-id="cmdDelShape" data-ibxp-disabled="true"></div>
				</div>
			</div>
		</markup-block>
	</markup>

	<scripts>
		<script-block>
		<![CDATA[
			//# sourceURL=shell.ibx.tool1.res.xml
		]]>
