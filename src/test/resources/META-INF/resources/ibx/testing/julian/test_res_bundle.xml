<?xml version="1.0" encoding="UTF-8"?>
<ibx-res-bundle name="test_res_bundle.xml" loadContext="bundle">
	<strings>
		<string-file src="./test_res_strings.txt" default="false"/>
		<string-bundle>
		<![CDATA[
			{
				"language":"en",
				"strings":
				{
					"TEST":"\\{1\\} A"
				}
			}
		]]>
		</string-bundle>
	</strings>

	<styles>
		<style-file src="./test_res_styles.css"/>
		<style-sheet>
		<![CDATA[
			.test-widget
			{
				text-align:center;
				border-radius:5px;
			}
			.test-widget-drag-over
			{
				background-color:pink;
			}

			.test-widget-label
			{
				width: 100px;
			}
		]]>
		</style-sheet>
	</styles>

	<markup>
		<markup-file src="./test_res_markup.xml"/>
		<markup-block>
			<div class="test-widget-template" data-ibx-name-root="true" data-ibx-type="testWidget" data-ibxp-align="center" data-ibxp-justify="center">
				<div class="test-widget-label" data-ibx-type="ibxLabel" data-ibx-name="_label" data-ibxp-glyph="face" data-ibxp-glyph-classes="material-icons">This is a Test Label</div>
			</div>
			<div class="test-label" data-ibx-type="ibxLabel" data-ibxp-text="@ibxString('TEST')"></div>
		</markup-block>
	</markup>

	<scripts>
		<script-file src="./test_res_script.js"/>
		<script-block>
		<![CDATA[
			$.widget("ibi.testWidget", $.ibi.ibxVBox, 
			{
				options:
				{
				},
				_widgetClass:"test-widget",
				_create:function()
				{
					this._super();
				},
				_destroy:function()
				{
					this._super();
				},
				_refresh:function()
				{
					this._label.css("border", "1px solid red");
					this._super();
				}
			});
			//# sourceURL=test_res_bundle.xml
		]]>
		</script-block>
	</scripts>
</ibx-res-bundle>
