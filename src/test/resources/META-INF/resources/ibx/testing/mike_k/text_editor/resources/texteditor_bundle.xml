<ibx-res-bundle name="texteditor_bundle.xml">
	<strings>
		<string-file src="{res}/com.ibi.intl.bip_editor.bip_editor"  default="true"/>	
		<string-bundle>
		<![CDATA[
		]]>
		</string-bundle>
	</strings>

	<styles>
		<style-sheet>
		<![CDATA[
			.text-editor
			{
				width:600px;
				height:350px;
			}

			.text-editor .ibx-dialog-main-box
			{
				position:absolute;
				left:0px;
				top:0px;
				right:0px;
				bottom:0px;
			}

			.te-tool-bar
			{
				padding:0px;
				margin-bottom:4px;
				border-bottom:1px solid #ccc;
			}

			.te-tb-btn
			{
				margin:3px;
			}

			.te-menu-bar
			{
				padding:3px;
				margin-bottom:4px;
			}

			.te-btn-menu
			{
				margin-right:10px;
			}

			.te-txt-area
			{
				flex:1 1 auto;
				font-family:consolas, menlo, courier new;
				font-size:10pt;
				margin-bottom:4px;
			}

			.te-sb-line-marker-label
			{
				margin-right:0px;
			}
			
			.te-sb-line-marker-value
			{
				margin-right:50px;
			}
			
			.te-sb-column-marker-label
			{
				margin-right:0px;
			}
			
			.te-sb-column-marker-value
			{
				margin-right:50px;
			}
			
			.te-search-go-to-line-collapsed
			{
				height:0px;
			}
			
			.te-search-find-replace-collapsed
			{
				height:0px;
			}
			.te-search-go-to-line-expanded
			{
				height:0px;
			}
			
			.te-search-find-replace-expanded
			{
				height:0px;
			}
		]]>
		</style-sheet>
	</styles>
	
		<scripts>
	<script-file src="./js/text_editor.js" loadContext="bundle"/>	
	</scripts>

	<markup>
		<markup-block>
			<div class="text-editor-resources">
				<div class="te-tool-bar" data-ibx-type="ibxHBox" data-ibxp-justify="start" data-ibxp-align="center">
					<div class="te-tb-new te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbNew" data-menu-cmd="onNew" title="@ibxString('bid_menu_file_new')" data-ibxp-glyph="insert_drive_file" data-ibxp-glyph-classes="material-icons md-18"></div>
					<div class="te-tb-open te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbOpen" data-menu-cmd="onOpen" title="@ibxString('bid_menu_file_open')" data-ibxp-glyph="folder_open" data-ibxp-glyph-classes="material-icons md-18"></div>
					<div class="te-tb-save te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbSave" data-menu-cmd="onSave" title="@ibxString('bid_menu_file_save')" data-ibxp-glyph="save" data-ibxp-glyph-classes="material-icons md-18"></div>
					<div class="te-tb-run te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbRun" data-menu-cmd="onRun" title="@ibxString('bid_run')" data-ibxp-glyph="directions_run" data-ibxp-glyph-classes="material-icons md-18"></div>
				</div>
				<div class="te-menu-bar" data-ibx-type="ibxMenuBar">
					<div data-ibx-type="ibxMenuButton" data-ibx-name="menuFile">@ibxString('bid_menu_file')
						<div class="te-file-menu te-menu" data-ibx-type="ibxMenu">
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileNew">@ibxString('bid_menu_file_new')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileOpen">@ibxString('bid_menu_file_open')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileSave">@ibxString('bid_menu_file_save')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileSaveAS">@ibxString('bid_menu_file_saveas')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileClose">@ibxString('bid_menu_file_close')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileExit">@ibxString('bid_menu_file_exit')</div>
						</div>
					</div>
					<div data-ibx-type="ibxMenuButton" data-ibx-name="menuEdit">@ibxString('bid_menu_edit')
						<div class="te-edit-menu te-menu" data-ibx-type="ibxMenu">
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editDelete">@ibxString('bid_menu_edit_delete')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editSelectAll">@ibxString('bid_menu_edit_selectall')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editUpperCase">@ibxString('bid_menu_edit_uppercase')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editLowerCase">@ibxString('bid_menu_edit_lowercase')</div>
						</div>
					</div>
					<div data-ibx-type="ibxMenuButton" data-ibx-name="menuSearch">@ibxString('bid_menu_search')
						<div class="te-search-menu te-menu" data-ibx-type="ibxMenu">
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="searchFind">@ibxString('bid_menu_search_find')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="searchGoTo">@ibxString('bid_menu_search_goto')</div>
						</div>
					</div>
					<div class="te-menu-button" data-ibx-type="ibxMenuButton" data-ibx-name="menuOptions" data-menu-cmd="options">@ibxString('bid_menu_options')</div>
					<div class="te-menu-button" data-ibx-type="ibxMenuButton" data-ibx-name="menuHelp" data-menu-cmd="help">@ibxString('bid_menu_help')</div>
				</div>
				
				<!-- Go To Line -->
				<div class="te-search-go-to-line-collapsed" data-ibx-name="goToLine"></div>
			
			
				<div class="te-txt-area" data-ibx-type="ibxTextArea" data-ibx-name="txtArea"></div>
				
				<!-- Find/ Replace -->
				<div class="te-search-find-replace-collapsed" data-ibx-name="findReplace"></div>
			
				<div class="te-status-bar" data-ibx-type="ibxHBox" data-ibxp-justify="start" data-ibxp-align="center">
					<div class="te-sb-line-marker-label" data-ibx-type="ibxLabel">@ibxString('bid_line')</div>
					<div class="te-sb-line-marker-value" data-ibx-name="linePosLbl" data-ibx-type="ibxLabel">x</div>
					<div class="te-sb-column-marker-label" data-ibx-type="ibxLabel">@ibxString('bid_column')</div>
					<div class="te-sb-column-marker-value" data-ibx-name="columnPosLbl" data-ibx-type="ibxLabel">x</div>
				</div>
			</div>
			

		</markup-block>
	</markup>


</ibx-res-bundle>
