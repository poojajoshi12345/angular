<ibx-res-bundle name="texteditor_bundle.xml">
	<ibx-package src="{context}/ibxtools/explore/explore_open_dialog.xml"/> <!-- Open/Save Dialog -->	
	<strings>
		<string-file src="{res}/com.ibi.intl.bip_editor.bip_editor"  default="true"/>	
		<string-bundle>
		<![CDATA[
		]]>
		</string-bundle>
	</strings>

	<styles>
		<style-sheet>
		<![CDATA[
			.text-editor
			{
				width:900px;
				height:600px;
			}

			.text-editor .ibx-dialog-main-box
			{
				position:absolute;
				left:0px;
				top:0px;
				right:0px;
				bottom:0px;
			}

			.te-tool-bar
			{
				padding:0px;
				margin-bottom:4px;
				border-bottom:1px solid #ccc;
			}

			.te-tb-btn
			{
				margin:3px;
			}

			.te-menu-bar
			{
				padding:3px;
				margin-bottom:4px;
			}

			.te-btn-menu
			{
				margin-right:10px;
			}

			.te-txt-area
			{
				flex:1 1 auto;
				font-family:Courier New, Courier, monospace;
				font-size:12px;
				margin-top:10px;
			}
			
			
			.te-search-go-to-line
			{
				margin-top:10px;
			}
			.txtGoToLine
			{
				margin-right:10px;
			}
			.btnGoToLine
			{			
				width:100px;
			}
			.btnCloseGoToLine
			{				
				width:100px;
			}
			
			
			.te-search-find-replace
			{
				margin-top:10px;
			}			
			.te-search-find-replace-1
			{
			}
			.findLbl
			{
				width:120px;			
			}
			.findText
			{
				width:250px;
				margin-left:20px;
			}
			.btnFindPrevious
			{
				margin-left:20px;
				width:100px;
			}
			.btnFind
			{
				margin-left:5px;
				width:100px;
			}
			.btnReplace
			{
				margin-left:5px;
				width:100px;
			}
			.te-search-find-replace-2
			{
				margin-top:5px;
			}
			.replaceLbl
			{
				width:120px;
			}
			.replaceText
			{
				width:250px;
				margin-left:20px;
			}
			.btnReplaceAll
			{
				margin-left:20px;
				width:100px;
			}
			.btnUndo
			{
				margin-left:5px;
				width:100px;
			}
			.btnFindClose
			{
				margin-left:5px;
				width:100px;
			}
			.te-search-find-replace-3
			{
				margin-top:5px;
			}
			.cbMatchCase
			{
				margin-left:400px;
			}
						
			
			.te-status-bar
			{
				margin-top:10px;
			}
			.te-sb-line-marker-label
			{
				margin-right:0px;
			}			
			.te-sb-line-marker-value
			{
				margin-right:50px;
			}			
			.te-sb-column-marker-label
			{
				margin-right:0px;
			}			
			.te-sb-column-marker-value
			{
				margin-right:50px;
			}

			
			 
		]]>
		</style-sheet>
	</styles>
	
	<scripts>
		<script-file src="./js/text_editor.js" loadContext="bundle"/>	
	</scripts>

	<markup>
		<markup-block>
			<div class="text-editor-resources">
				<div class="te-tool-bar" data-ibx-type="ibxHBox" data-ibxp-justify="start" data-ibxp-align="center">
					<div class="te-tb-new te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbNew" tabindex="1" data-menu-cmd="onNew" title="@ibxString('bid_menu_file_new')" data-ibxp-glyph="insert_drive_file" data-ibxp-glyph-classes="material-icons md-18"></div>
					<div class="te-tb-open te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbOpen" tabindex="2" data-menu-cmd="onOpen" title="@ibxString('bid_menu_file_open')" data-ibxp-glyph="folder_open" data-ibxp-glyph-classes="material-icons md-18"></div>
					<div class="te-tb-save te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbSave" tabindex="3" data-menu-cmd="onSave" title="@ibxString('bid_menu_file_save')" data-ibxp-glyph="save" data-ibxp-glyph-classes="material-icons md-18"></div>
					<div class="te-tb-run te-tb-btn" data-ibx-type="ibxButtonSimple" data-ibx-name="tbRun" tabindex="4" data-menu-cmd="onRun" title="@ibxString('bid_run')" data-ibxp-glyph="play_arrow" data-ibxp-glyph-classes="material-icons md-18"></div>
				</div>
				<div class="te-menu-bar" data-ibx-type="ibxMenuBar">
					<div data-ibx-type="ibxMenuButton" data-ibx-name="menuFile" tabindex="5">@ibxString('bid_menu_file')
						<div class="te-file-menu ibx-menu-no-icons te-menu" data-ibx-type="ibxMenu">
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileNew">@ibxString('bid_menu_file_new')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileOpen">@ibxString('bid_menu_file_open')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileSave">@ibxString('bid_menu_file_save')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileSaveAs">@ibxString('bid_menu_file_saveas')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileClose">@ibxString('bid_menu_file_close')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="fileExit">@ibxString('bid_menu_file_exit')</div>
						</div>
					</div>
					<div data-ibx-type="ibxMenuButton" data-ibx-name="menuEdit" tabindex="6">@ibxString('bid_menu_edit')
						<div class="te-edit-menu ibx-menu-no-icons te-menu" data-ibx-type="ibxMenu">
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editDelete">@ibxString('bid_menu_edit_delete')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editSelectAll">@ibxString('bid_menu_edit_selectall')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editUpperCase">@ibxString('bid_menu_edit_uppercase')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="editLowerCase">@ibxString('bid_menu_edit_lowercase')</div>
						</div>
					</div>
					<div data-ibx-type="ibxMenuButton" data-ibx-name="menuSearch">@ibxString('bid_menu_search')
						<div class="te-search-menu ibx-menu-no-icons te-menu" data-ibx-type="ibxMenu">
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="searchFind">@ibxString('bid_menu_search_find')</div>
							<div data-ibx-type="ibxMenuItem" data-menu-cmd="searchGoTo">@ibxString('bid_menu_search_goto')</div>
						</div>
					</div>
					<div class="te-menu-button" data-ibx-type="ibxMenuButton" data-ibx-name="menuOptions" data-menu-cmd="menuOptions">@ibxString('bid_menu_options')</div>
					<div class="te-menu-button" data-ibx-type="ibxMenuButton" data-ibx-name="menuHelp" data-menu-cmd="menuHelp">@ibxString('bid_menu_help')</div>
				</div>
				
				<!-- Go To Line -->				
				<div class="te-search-go-to-line goToLine" data-ibx-type="ibxHBox" data-ibxp-justify="start" data-ibxp-align="center">
					<div class="txtGoToLine" data-ibx-type="ibxTextField" tabindex="1"></div>
					<div class="ibx-primary btnGoToLine" data-ibx-type="ibxButton" data-ibxp-justify="center">@ibxString('bid_OK')</div>
					<div class="ibx-default btnCloseGoToLine" data-ibx-type="ibxButton" data-ibxp-justify="center">@ibxString('bid_close')</div>
				</div>
				
